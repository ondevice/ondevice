#!/bin/bash -e
#
# Overwrite the root README.md with the one in this directory (otherwise the
# root README.md would be used for the image description on hub.docker.com)

# this script seems to be run in the build/docker/ directory.
# let's make sure this is actually the case (by comparing the last two path parts with build/docker):
curDir="$(pwd|rev|cut -d/ -f1,2|rev)"
if [ "$curDir" != "build/docker" ]; then
	echo "ERROR: expected to be in the build/docker directory, not '$PWD'" >&2
	exit 1
fi

# copy README.md file up to the root dir
cp -v README.md ../../
